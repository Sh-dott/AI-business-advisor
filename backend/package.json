{
  "name": "ai-business-advisor-backend",
  "version": "1.0.0",
  "description": "Backend API for AI Business Advisor with Claude/OpenAI integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node scripts/seed-technologies.js",
    "test": "jest --coverage",
